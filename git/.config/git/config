# This is Git's per-user configuration file.
[user]
    name = brikehn
    email = thebriankwon@gmail.com
[includeIf "gitdir/i:~/dailypay/"]
    path = ~/.config/git/dailypay
[include]
    path = ~/.config/git/ssh
[alias]
    lg = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr)%Creset [%an]' --abbrev-commit --date=relative
    st = status --short --branch -M
    co = checkout
    cm    = commit -m
    br    = branch
    d     = diff
    pl    = pull
    pu    = push
    a     = add
    ac    = !git add . && git commit -m
    undo  = reset --soft HEAD~1
[pull]
    rebase = true
[core]
    editor = nvim
[init]
    defaultBranch = main
[url "ssh://git@github.com/"]
	insteadOf = https://github.com/
